%% ---- Totální a parciální derivace ----
\renewcommand{\d}{{\mathrm d}}
\newcommand{\p}{\partial}
\newcommand{\Cov}{\nabla}

\newcommand{\nder}[3]{ \frac{\d^{#1} #2}{\d #3^{#1}} }
\newcommand{\dder}[2]{ \nder{2}{#1}{#2} }
\newcommand{\der} [2]{ \nder{}{#1}{#2}  }
\newcommand{\vnder}[2]{ \frac{\d^{#1}}{\d #2^{#1}} }
\newcommand{\vdder}[1]{ \vnder {2}{#1} }
\newcommand{\vder}[1]{ \vnder {}{#1} }

\newcommand{\npder}[3]{\frac{\p^{#1} #2}{\p #3^{#1}}}
\newcommand{\pder} [2]{\npder{}{#1}{#2}}
\newcommand{\pdder}[2]{\npder{2}{#1}{#2}}
\newcommand{\ppder}[3]{\frac{\p^2 #1}{\p #2 \, \p #3}}


